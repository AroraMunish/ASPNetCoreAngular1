<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/GWSite.css" rel="stylesheet" />
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">

            <button class="navbar-toggler mr-auto" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <a href="#" class="navbar-brand mr-auto">Great World</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="App" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="App" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="App" asp-action="About">About</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="App" asp-action="Register">Register User</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Trips" asp-action="Index">Trips</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                        </li>
                    }else
                    {                    
                        <li class="nav-item active">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                        </li>
                    }

                </ul>
            </div>
            <div class="order-3">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <p>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span>Welcome @User.Identity.Name !! &nbsp;&nbsp;</span>
                            }
                        </p>
                    </li>
                </ul>
            </div>

        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <div>
        <footer>
            <div id="footer" class="container-fluid">
                &copy;  The World Ltd.
            </div>
        </footer>
        <br />
        <br />

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
