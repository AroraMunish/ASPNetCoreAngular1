<html>
<head>
    <title>Write Cookies</title>
</head>
<body>
    <h1>Specify your preferences :</h1>
    <form asp-action="WriteCookies" asp-controller="Cookies">
        <select name="setting">
            <option value="fontName">Font Name</option>
            <option value="fontSize">Font Size</option>
            <option value="color">Color</option>
        </select>
        <input type="text" name="settingValue" />
        <input type="checkbox" name="isPersistent"
               checked="checked" /> Is Persistent?
        <input type="submit" value="Write Cookie" />
    </form>

    <h4>@ViewBag.Message</h4>

    <h4>
        <a asp-action="ReadCookies" asp-controller="Cookies">
            Read Cookies
        </a>
    </h4>
</body>
</html>
