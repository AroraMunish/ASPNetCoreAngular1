@model cloudscribe.Pagination.Models.PagedResult<Blog>
@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Blogs";
    ViewData["Action"] = "Index";
}

<h1>List of Blogs</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="border rounded border-success">
    <table class="table table-striped">
        <thead class="bg-primary">
            <tr class="text-white">
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Url)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].DateCreated)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BlogId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.BlogId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <partial name="_PaginationPartial" view-data="ViewData" model="Model" />
</div>
